{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectName": {
            "type": "string",
            "metadata": {
                "description": "The name of the project. This string will be used to name the subnet."
            }
        },
        "environmentName": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "dev",
                "staging",
                "prod",
                "DEV",
                "STAGING",
                "PROD"
            ],
            "metadata": {
                "description": "The environment of the Virtual Network. This string will be used to name the subnet."
            }
        },
        "zoneName": {
            "type": "string",
            "defaultValue": "PAZ",
            "allowedValues": [
                "PAZ",
                "OZ",
                "RZ",
                "HRZ",
                "REZ",
                "SAZ"
            ],
            "metadata": {
                "description": "The subnet's zone (capitalized acronym) according to ITSG22."
            }
        },
        "subZoneName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional: Sub-zone in case one zone needs to be seperated."
            }
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "description": "The adress prefix of the address space. (IE: 10.10.10.32)"
            }
        },
        "subnetMask": {
            "type": "string",
            "defaultValue": "/27",
            "metadata": {
                "description": "The subnet mask of the subnet. Format: /# (IE: /27)"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the vnet you wish to deploy the subnet to."
            }
        },
        "resourceTags": {
            "type": "object",
            "metadata": {
                "description": "Tags to add to the network security group."
            },
            "defaultValue": {}
        }
    },
    "functions": [
        {
            "namespace": "env",
            "members": {
                "transform": {
                    "parameters": [
                        {
                            "name": "env",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(equals(toUpper(parameters('env')), 'PROD'), '', concat('-', toUpper(parameters('env'))))]"
                    }
                }
            }
        },
        {
            "namespace": "name",
            "members": {
                "clean": {
                    "parameters": [
                        {
                            "name": "name",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[replace(replace(replace(parameters('name'), '-', ''), '_', ''), ' ', '')]"
                    }
                },
                "optionalNameParameter": {
                    "parameters": [
                        {
                            "name": "name",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(equals(parameters('name'), ''), '', concat('-', parameters('name'), '-'))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "subnet_name": "[concat(name.clean(parameters('projectName')), '-', parameters('zoneName'), name.optionalNameParameter(parameters('subZoneName')), env.transform(parameters('environmentName')),'-SN')]",
        "address_space": "[concat(parameters('addressPrefix'), parameters('subnetMask'))]",
        "nsg_name": "[concat(name.clean(parameters('projectName')), '-', parameters('zoneName'), name.optionalNameParameter(parameters('subZoneName')), env.transform(parameters('environmentName')),'-NSG')]"
    },
    "resources": [
        {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsg_name')]",
            "location": "Canada Central",
            "tags": "[parameters('resourceTags')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-04-01",
            "name": "[concat(parameters('vnetName'), '/', variables('subnet_name'))]",
            "properties": {
                "addressPrefix": "[variables('address_space')]",
                "serviceEndpoints": [],
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_name'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_name'))]"
            ]
        }
    ],
    "outputs": {
        "subnetID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('subnet_name'))]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnet_name')]"
        },
        "nsgID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_name'))]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsg_name')]"
        }
    }
}
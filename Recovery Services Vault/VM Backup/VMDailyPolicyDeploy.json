{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectName": {
            "type": "string",
            "metadata": {
                "description": "The name of the project. This string will be used to name all resources required."
            }
        },
        "environmentName": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "dev",
                "staging",
                "prod",
                "DEV",
                "STAGING",
                "PROD"
            ],
            "metadata": {
                "description": "The environment of the resources to backup. This string will be used to name all resources required."
            }
        },
        "dailyBackupsRetention": {
            "type": "int",
            "defaultValue": 90,
            "metadata": {
                "description": "Number of days (7-9999) to retain daily backups."
            }
        },
        "instantRpRetentionRangeInDays": {
            "type": "int",
            "defaultValue": 5,
            "metadata": {
                "description": "Number of days (1-5) to keep instant recovery snapshots."
            }
        },
        "backupTime": {
            "type": "string",
            "defaultValue": "00:00",
            "metadata": {
                "description": "Time of daily backups (hh:mm)."
            }
        }
    },
    "functions": [
        {
            "namespace": "env",
            "members": {
                "transform": {
                    "parameters": [
                        {
                            "name": "env",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(equals(toUpper(parameters('env')), 'PROD'), '', concat('-', toUpper(parameters('env'))))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "vault_name": "[concat(parameters('projectName') , env.transform(parameters('environmentName')), '-RecoveryVault')]",
        "policy_name": "[concat('Daily', parameters('backupTime'), 'For', string(parameters('dailyBackupsRetention')),'Days-VMPolicy')]",
        "backup_time": ["2020-06-22T00:00:00Z"]
    },
    "resources": [
        {
            "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
            "apiVersion": "2016-12-01",
            "name": "[concat(variables('vault_name'), '/', variables('policy_name'))]",
            "properties": {
                "backupManagementType": "AzureIaasVM",
                "schedulePolicy": {
                    "scheduleRunFrequency": "Daily",
                    "scheduleRunDays": null,
                    "scheduleRunTimes": "[variables('backup_time')]",
                    "scheduleWeeklyFrequency": 0,
                    "schedulePolicyType": "SimpleSchedulePolicy"
                },
                "retentionPolicy": {
                    "dailySchedule": {
                        "retentionTimes": [
                            "[variables('backup_time')]"
                        ],
                        "retentionDuration": {
                            "count": "[parameters('dailyBackupsRetention')]",
                            "durationType": "Days"
                        }
                    },
                    "weeklySchedule": null,
                    "monthlySchedule": null,
                    "yearlySchedule": null,
                    "retentionPolicyType": "LongTermRetentionPolicy"
                },
                "timeZone": "Eastern Standard Time",
                "instantRpRetentionRangeInDays": "[parameters('instantRpRetentionRangeInDays')]",
                "instantRPDetails": {
                }
            }
        }
    ],
    "outputs": {
        "policyID": {
            "type": "string",
            "value": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', variables('vault_name'), variables('policy_name'))]"
        },
        "policyName": {
            "type": "string",
            "value": "[variables('policy_name')]"
        }
    }
}
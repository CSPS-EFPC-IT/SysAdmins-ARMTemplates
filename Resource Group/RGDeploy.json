{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectName": {
            "type": "string",
            "metadata": {
                "description": "The name of the project. This string will be used to name the resource group."
            }
        },
        "environmentName": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "sandbox",
                "dev",
                "staging",
                "prod",
                "SANDBOX",
                "DEV",
                "STAGING",
                "PROD"
            ],
            "metadata": {
                "description": "The environment of the resource group. This string will be used to name the virtual network."
            }
        },
        "resourceTags": {
            "type": "object",
            "metadata": {
                "description": "Tags to add to the resource group. The required tags are: Project, Group, Owner, Environment, Classfication, Audience, User Impact Level, High Availability, Uptime Period, Backups, and Retention."
            },
            "defaultValue": {
                "Audience": "",
                "Backups": "",
                "Classification": "",
                "Environment": "",
                "Group": "",
                "High Availability": "",
                "Owner": "",
                "Project": "",
                "Retention": "",
                "Uptime Period": "",
                "User Impact Level": ""
            }
        }
    },
    "functions": [
        {
            "namespace": "name",
            "members": {
                "clean": {
                    "parameters": [
                        {
                            "name": "name",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[replace(replace(replace(parameters('name'), '-', ''), '_', ''), ' ', '')]"
                    }
                }
            }
        },
        {
            "namespace": "env",
            "members": {
                "transform": {
                    "parameters": [
                        {
                            "name": "env",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(equals(toUpper(parameters('env')), 'PROD'), '', concat('-', toUpper(parameters('env'))))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "rg_name": "[concat(name.clean(parameters('projectName')), env.transform(parameters('environmentName')), '-RG')]"
    },
    "resources": [
        {
            "name": "[variables('rg_name')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2020-06-01",
            "location": "Canada Central",
            "tags": "[parameters('resourceTags')]",
            "properties": {}
        }
    ],
    "outputs": {
        "rgID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Resources/resourceGroups', variables('rg_name'))]"
        },
        "rgName": {
            "type": "string",
            "value": "[variables('rg_name')]"
        }
    }
}